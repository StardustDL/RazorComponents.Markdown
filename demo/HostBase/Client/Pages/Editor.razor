@page "/editor"

<EditForm Model="@model">
    <InputTextArea @bind-Value="@model.Value" style="width: 100%"></InputTextArea>
</EditForm>

<StardustDL.RazorComponents.Markdown.MarkdownRenderer Value="@model.Value" RenderInterval="@TimeSpan.FromSeconds(10)"/>

@code{
    class Model
    {
        public string Value { get; set; } = "";
    }

    Model model = new Model();
}
